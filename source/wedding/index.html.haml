%h2 RSVP
%form#comment-form{:action => "https://formspree.io/ryan.freeth@gmail.com", :method => "POST", :novalidate => ""}
  .form
    .form-left
      %p
        %label{:for => "name"} Name
        %input#name{:name => "name", :placeholder => "Name...", :type => "text"}/
      %p
        %label{:for => "email"} Email
        %input#email{:name => "email", :placeholder => "E-mail...", :type => "email"}/
      %input{:name => "_subject", :type => "hidden", :value => "Wedding RSVP"}/
      %input{:name => "_gotcha", :type => "text", style: "display:none"}
    .form-right
      %p
        %label{:for => "message"} Message
        %textarea#message{:name => "message", :placeholder => "Comment away...", :rows => "10"}
  #contact-error
  %p.submit
    %input.button{:type => "submit", :value => "Send"}/
/ end form
